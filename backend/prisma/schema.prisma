generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  password     String
  refreshToken String
  createdAt    DateTime @default(now())

  messages Message[]
  sessions Session[]
}

model Message {
  id        Int      @id @default(autoincrement())
  user      String
  text      String
  timestamp DateTime
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Session {
  id       Int      @id @default(autoincrement())
  userId   Int      @unique
  isOnline Boolean  @default(false)
  lastSeen DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
